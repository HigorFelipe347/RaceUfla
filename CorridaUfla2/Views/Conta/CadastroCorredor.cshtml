@model CorridaUfla2.Models.Corredor
<h2>Novo Corredor</h2>
<form asp-action="CadastroCorredor" method="post">
    <div class="row">
        <div class="col-6"><label>Nome</label><input asp-for="Nome" class="form-control" /></div>
        <div class="col-6"><label>Email</label><input asp-for="Email" class="form-control" /></div>
        <div class="col-6"><label>Senha</label><input asp-for="Senha" class="form-control" /></div>
        <div class="col-6"><label>CPF</label><input asp-for="CPF" class="form-control" /></div>
        <div class="col-6"><label>Nascimento</label><input asp-for="DataNascimento" class="form-control" /></div>
    </div>
    <div class="mt-3">
        <input type="checkbox" required /> Aceito os termos.
    </div>
    <button class="btn btn-success mt-2">Cadastrar</button>
</form>
