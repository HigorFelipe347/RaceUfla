@model CorridaUfla2.Models.Organizador
@{
    ViewData["Title"] = "Cadastro Organizador";
}

<h2>Cadastro de Organizador</h2>

<form asp-action="CadastroOrganizador" method="post">

    <div asp-validation-summary="All" class="text-danger mb-2"></div>

    <div class="row">
        <div class="col-md-6 mb-2">
            <label asp-for="Nome" class="form-label"></label>
            <input asp-for="Nome" class="form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="Senha" class="form-label"></label>
            <input asp-for="Senha" type="password" class="form-control" required />
            <span asp-validation-for="Senha" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="Telefone" class="form-label"></label>
            <input asp-for="Telefone" class="form-control" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="CpfCnpj" class="form-label"></label>
            <input asp-for="CpfCnpj" class="form-control" required />
            <span asp-validation-for="CpfCnpj" class="text-danger"></span>
        </div>

        <div class="col-md-6 mb-2">
            <label asp-for="ChavePix" class="form-label fw-bold text-primary"></label>
            <input asp-for="ChavePix" class="form-control" required placeholder="Email, CPF, Telefone ou Aleatória" />
            <small class="text-muted">Pagamentos serão enviados para essa chave.</small>
            <span asp-validation-for="ChavePix" class="text-danger"></span>
        </div>
    </div>

    <div class="form-check mt-3">
        <input type="checkbox" class="form-check-input" required />
        <label class="form-check-label">Li e aceito os termos.</label>
    </div>

    <button type="submit" class="btn btn-info mt-3 text-white fw-bold">Cadastrar Organizador</button>
    <a asp-action="Login" class="btn btn-link mt-3">Voltar ao Login</a>
</form>
