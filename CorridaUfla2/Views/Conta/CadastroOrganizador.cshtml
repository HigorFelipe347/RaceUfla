@model CorridaUfla2.Models.Organizador

<h2>Cadastro de Organizador</h2>

<form asp-action="CadastroOrganizador" method="post">
    <div class="row">
        <div class="col-md-6 mb-2">
            <label>Nome da Organização</label>
            <input asp-for="Nome" class="form-control" required />
        </div>
        <div class="col-md-6 mb-2">
            <label>Email</label>
            <input asp-for="Email" class="form-control" type="email" required />
        </div>
        <div class="col-md-6 mb-2">
            <label>Senha</label>
            <input asp-for="Senha" class="form-control" type="password" required />
        </div>
        <div class="col-md-6 mb-2">
            <label>Telefone</label>
            <input asp-for="Telefone" class="form-control" />
        </div>

        <div class="col-md-6 mb-2">
            <label>CPF ou CNPJ</label>
            <input asp-for="CpfCnpj" class="form-control" required />
        </div>

        <div class="col-md-6 mb-2">
            <label class="fw-bold text-primary">Chave PIX</label>
            <input asp-for="ChavePix" class="form-control" placeholder="Email, CPF, Telefone ou Aleatória" required />
            <small class="text-muted">Os corredores enviarão o pagamento para esta chave.</small>
        </div>
    </div>

    <div class="mt-3 form-check">
        <input type="checkbox" class="form-check-input" id="termosOrg" required />
        <label class="form-check-label" for="termosOrg">Declaro que li e aceito os termos de privacidade e segurança.</label>
    </div>

    <button type="submit" class="btn btn-info mt-3 text-white fw-bold">Cadastrar Organizador</button>
    <a asp-action="Login" class="btn btn-link mt-3">Voltar ao Login</a>
</form>
