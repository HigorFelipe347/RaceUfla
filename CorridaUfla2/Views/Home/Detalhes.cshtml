@model CorridaUfla2.Models.Corrida
@{ 
    var kits = ViewBag.KitsDisponiveis as List<CorridaUfla2.Models.Kit>; 
    var pix = ViewBag.Pix;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-7">
            <h1 class="text-primary">@Model.Nome</h1>
            
            @if(!string.IsNullOrEmpty(Model.CaminhoImagemMapa)) {
                <img src="~/imagens/@Model.CaminhoImagemMapa" class="img-fluid rounded mb-3 shadow-sm" style="max-height: 300px; width: 100%; object-fit: cover;" />
            }
            
            <div class="alert alert-light border">
                <h5>Sobre o Evento</h5>
                <p>@Model.Descricao</p>
                <hr>
                <strong>Data:</strong> @Model.DataInicio.ToShortDateString() - @Model.HorarioLargada <br>
                <strong>Local:</strong> @Model.Logradouro, @Model.Numero - @Model.Bairro, @Model.Cidade
            </div>
        </div>

        <div class="col-md-5">
            <div class="card border-primary shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Inscrição</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Inscrever" method="post">
                        <input type="hidden" name="corridaId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="fw-bold">1. Escolha o Kit:</label>
                            <select name="kitId" id="selectKit" class="form-select" required onchange="atualizarInfos()">
                                @foreach(var k in kits) {
                                    <option value="@k.Id" 
                                            data-preco="@k.Preco"
                                            data-desc="@k.Descricao"
                                            data-itens="@k.ItensTexto"
                                            data-camisa="@k.TemCamisa.ToString().ToLower()">
                                        @k.Nome - @(k.Preco == 0 ? "GRÁTIS" : "R$ " + k.Preco)
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="alert alert-info p-2 mb-3">
                            <h6 class="fw-bold border-bottom pb-1">Itens Inclusos:</h6>
                            <p class="mb-2 small" id="lblItens">...</p>
                            
                            <h6 class="fw-bold border-bottom pb-1">Descrição:</h6>
                            <p class="mb-0 small" id="lblDesc">...</p>
                        </div>

                        <div class="mb-3" id="divCamisa" style="display:none;">
                            <label class="fw-bold text-danger">2. Tamanho da Camisa:</label>
                            <select name="tamanho" class="form-select">
                                <option value="P">P</option>
                                <option value="M">M</option>
                                <option value="G">G</option>
                                <option value="GG">GG</option>
                            </select>
                        </div>
                        <input type="hidden" name="tamanho" value="NaoAplica" id="hiddenCamisa" disabled />

                        <div id="divPix" class="alert alert-warning text-center" style="display:none;">
                            <strong>Pagamento PIX:</strong> <br>
                            <span class="badge bg-dark fs-5">@pix</span>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" required />
                            <label>Li e aceito os termos.</label>
                        </div>

                        <button class="btn btn-success w-100 btn-lg">Confirmar Inscrição</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function atualizarInfos() {
        var select = document.getElementById("selectKit");
        var opt = select.options[select.selectedIndex];
        
        // Pega dados
        var desc = opt.getAttribute("data-desc");
        var itens = opt.getAttribute("data-itens");
        var preco = parseFloat(opt.getAttribute("data-preco"));
        var temCamisa = opt.getAttribute("data-camisa") === "true";

        // Atualiza Texto
        document.getElementById("lblDesc").innerText = desc || "Sem descrição";
        document.getElementById("lblItens").innerText = itens || "Nenhum item.";

        // Camisa
        var divCamisa = document.getElementById("divCamisa");
        var hiddenCamisa = document.getElementById("hiddenCamisa");
        
        if(temCamisa) {
            divCamisa.style.display = "block";
            hiddenCamisa.disabled = true;
        } else {
            divCamisa.style.display = "none";
            hiddenCamisa.disabled = false;
        }

        // PIX
        document.getElementById("divPix").style.display = (preco > 0) ? "block" : "none";
    }

    window.onload = atualizarInfos;
</script>