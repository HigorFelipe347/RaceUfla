@model CorridaUfla2.Models.Corrida
@{
    var kits = ViewBag.KitsDisponiveis as List<CorridaUfla2.Models.Kit>;
    var pix = ViewBag.Pix;
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-7">
            <h1 class="text-primary">@Model.Nome</h1>

            @if (!string.IsNullOrEmpty(Model.CaminhoImagemMapa))
            {
                <img src="~/imagens/@Model.CaminhoImagemMapa"
                     class="img-fluid rounded mb-3 shadow-sm"
                     style="max-height:300px; object-fit:cover;" />
            }

            <div class="alert alert-light border">
                <h5 class="fw-bold">Sobre o Evento</h5>
                <p>@Model.Descricao</p>
                <hr>
                <strong>Data:</strong> @Model.DataInicio.ToShortDateString() - @Model.HorarioLargada<br />
                <strong>Local:</strong> @Model.Logradouro, @Model.Numero - @Model.Bairro, @Model.Cidade
            </div>
        </div>

        <div class="col-md-5">
            <div class="card border-primary shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Inscrição</h4>
                </div>
                <div class="card-body">

                    <form asp-action="Inscrever" method="post">
                        <input type="hidden" name="corridaId" value="@Model.Id" />

                        <div class="mb-3">
                            <label class="fw-bold">1. Escolha o Kit:</label>
                            <select class="form-select" name="kitId" id="selectKit" required onchange="atualizarInfos()">
                                @foreach (var k in kits)
                                {
                                    <option value="@k.Id"
                                            data-preco="@k.Preco"
                                            data-desc="@k.Descricao"
                                            data-itens="@k.ItensTexto"
                                            data-camisa="@k.TemCamisa.ToString().ToLower()">
                                        @k.Nome - @(k.Preco == 0 ? "GRÁTIS" : "R$ " + k.Preco)
                                    </option>
                                }
                            </select>
                        </div>

                        <div class="alert alert-info p-2 mb-3">
                            <h6 class="fw-bold border-bottom pb-1">Itens Inclusos:</h6>
                            <p id="lblItens" class="small mb-1">...</p>

                            <h6 class="fw-bold border-bottom pb-1">Descrição:</h6>
                            <p id="lblDesc" class="small mb-0">...</p>
                        </div>

                        <div id="divCamisa" style="display:none;" class="mb-3">
                            <label class="fw-bold text-danger">2. Tamanho da Camisa:</label>
                            <select class="form-select" name="tamanho">
                                <option>P</option>
                                <option>M</option>
                                <option>G</option>
                                <option>GG</option>
                            </select>
                        </div>

                        <input type="hidden" name="tamanho" value="NaoAplica" id="hiddenCamisa" disabled />

                        <div id="divPix" class="alert alert-warning text-center" style="display:none;">
                            <strong>Pagamento PIX:</strong><br />
                            <span class="badge bg-dark fs-5">@pix</span>
                        </div>

                        <div class="form-check mb-3">
                            <input type="checkbox" class="form-check-input" required />
                            <label class="form-check-label">Li e aceito os termos.</label>
                        </div>

                        <button class="btn btn-success w-100 btn-lg">Confirmar Inscrição</button>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function atualizarInfos() {
        const opt = document.getElementById("selectKit").selectedOptions[0];

        document.getElementById("lblDesc").innerText = opt.dataset.desc || "Sem descrição.";
        document.getElementById("lblItens").innerText = opt.dataset.itens || "Nenhum item.";

        const preco = parseFloat(opt.dataset.preco);
        const temCamisa = opt.dataset.camisa === "true";

        document.getElementById("divCamisa").style.display = temCamisa ? "block" : "none";
        document.getElementById("hiddenCamisa").disabled = temCamisa;

        document.getElementById("divPix").style.display = preco > 0 ? "block" : "none";
    }

    window.onload = atualizarInfos;
</script>
