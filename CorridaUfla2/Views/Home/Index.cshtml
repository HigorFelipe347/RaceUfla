@model List<CorridaUfla2.Models.Corrida>

<h2>Corridas Disponíveis</h2>

<form method="get" class="d-flex mb-3">
    <input name="busca" class="form-control" placeholder="Buscar..." />
    <button class="btn btn-primary ms-2">Buscar</button>
</form>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 mb-3">
            <div class="card shadow-sm p-3">

                @if (!string.IsNullOrEmpty(item.CaminhoImagemMapa))
                {
                    <img src="~/imagens/@item.CaminhoImagemMapa" class="w-100" style="height:150px; object-fit:cover" />
                }

                <h4 class="mt-2">@item.Nome</h4>
                <p class="text-muted">@item.DataInicio.ToShortDateString()</p>

                <a asp-action="Detalhes" asp-route-id="@item.Id" class="btn btn-primary">Ver Detalhes</a>
            </div>
        </div>
    }
</div>
