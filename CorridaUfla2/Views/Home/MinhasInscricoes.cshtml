@model List<CorridaUfla2.Models.Inscricao>

<div class="container mt-4">
    <h2 class="mb-4">Minhas Inscrições</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Você ainda não se inscreveu em nenhuma corrida. <a asp-action="Index">Ver corridas</a>.</div>
    }
    else
    {
        <table class="table table-striped shadow-sm">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Corrida</th>
                    <th>Kit Escolhido</th>
                    <th>Valor</th>
                    <th>Status</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.NomeCorrida</td>
                        <td>@item.NomeKit <br /> <small class="text-muted">Camisa: @item.TamanhoCamisa</small></td>
                        <td>@(item.ValorPago == 0 ? "Grátis" : "R$ " + item.ValorPago.ToString("F2"))</td>
                        <td>
                            <span class="badge @(item.Status.Contains("Confirmado") ? "bg-success" : "bg-warning text-dark")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            <form asp-action="CancelarInscricao" method="post" onsubmit="return confirm('Tem certeza que deseja cancelar?');">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Cancelar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>