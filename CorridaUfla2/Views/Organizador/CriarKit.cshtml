@model CorridaUfla2.Models.Kit

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3>Cadastrar Novo Kit</h3>
        </div>
        <div class="card-body">
            <form asp-action="CriarKit" method="post">

                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="fw-bold">Nome do Kit</label>
                        <input asp-for="Nome" class="form-control" placeholder="Ex: Kit Premium" required />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="fw-bold">Preço (R$)</label>
                        <input asp-for="Preco" class="form-control" type="number" step="0.01" required />
                    </div>
                </div>

                <div class="mb-3">
                    <label class="fw-bold">Descrição</label>
                    <textarea asp-for="Descricao" class="form-control" rows="2" placeholder="Descreva os benefícios desse kit..." required></textarea>
                </div>

                <div class="mb-3 p-3 bg-light border rounded">
                    <label class="fw-bold mb-2">Selecione os Itens Inclusos:</label>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="itensSelecionados" value="Camiseta" id="itemCamisa">
                        <label class="form-check-label" for="itemCamisa">Camiseta (Ativa seleção de tamanho P/M/G)</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="itensSelecionados" value="Número de Peito" id="itemNumero">
                        <label class="form-check-label" for="itemNumero">Número de Peito</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="itensSelecionados" value="Água" id="itemAgua">
                        <label class="form-check-label" for="itemAgua">Garrafa de Água / Hidratação</label>
                    </div>

                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" name="itensSelecionados" value="Medalha" id="itemMedalha">
                        <label class="form-check-label" for="itemMedalha">Medalha Finisher</label>
                    </div>

                    <div class="mt-2">
                        <label class="small text-muted">Outros (Separe por vírgula):</label>
                        <input type="text" name="itemOutros" class="form-control form-control-sm" placeholder="Ex: Boné, Chip de Cronometragem...">
                    </div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <a asp-action="MeusKits" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-success px-4">Salvar Kit</button>
                </div>
            </form>
        </div>
    </div>
</div>