@model CorridaUfla2.Models.Kit

<div class="container mt-4">
    <h2>Editar Kit</h2>

    <form asp-action="EditarKit" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-3">
            <label>Nome</label>
            <input asp-for="Nome" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Preço</label>
            <input asp-for="Preco" class="form-control" type="number" step="0.01" required />
        </div>

        <div class="mb-3">
            <label>Itens (separados por vírgula)</label>
            <input asp-for="ItensTexto" class="form-control" />
        </div>

        <div class="mb-3 form-check">
            <input asp-for="TemCamisa" class="form-check-input" />
            <label class="form-check-label">Inclui Camiseta?</label>
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a asp-action="MeusKits" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
