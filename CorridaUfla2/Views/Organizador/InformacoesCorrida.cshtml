@model CorridaUfla2.Models.Corrida
@{
    var inscricoes = ViewBag.Inscricoes as List<CorridaUfla2.Models.Inscricao>;
    var corredores = ViewBag.TodosCorredores as List<CorridaUfla2.Models.Corredor>;
}
<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Gerenciar Participantes</h2>
        <a asp-action="MinhasCorridas" class="btn btn-secondary">Voltar</a>
    </div>

    <div class="card mb-4 shadow-sm border-primary">
        <div class="card-header bg-primary text-white"><h4>@Model.Nome</h4></div>
        <div class="card-body">

            <div class="row">
                <div class="col-md-4"><strong>Data:</strong> @Model.DataInicio.ToShortDateString() - @Model.HorarioLargada</div>
                <div class="col-md-4"><strong>Local:</strong> @Model.Cidade - @Model.UF</div>
                <div class="col-md-4"><strong>Endereço:</strong> @Model.Logradouro, @Model.Numero - @Model.Bairro</div>

                <div class="col-md-12 mt-3">
                    <strong>Descrição:</strong><br />
                    @Model.Descricao
                </div>
            </div>

        </div>
    </div>

    <h3 class="mb-3">Lista de Participantes (@inscricoes.Count)</h3>

    @if (!inscricoes.Any())
    {
        <div class="alert alert-info">Nenhum inscrito ainda.</div>
    }
    else
    {
        <table class="table table-bordered table-striped bg-white">
            <thead class="table-dark">
                <tr>
                    <th>Corredor</th>
                    <th>Contato</th>
                    <th>Kit</th>
                    <th>Pag.</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var i in inscricoes)
                {
                    var c = corredores.FirstOrDefault(x => x.Id == i.CorredorId);

                    <tr>
                        <td>
                            <strong>@(c?.Nome ?? "Usuário excluído")</strong><br />
                            <small>CPF: @(c?.CPF ?? "--")</small>
                        </td>

                        <td>
                            @c?.Email <br />
                            <small>@c?.Telefone</small>
                        </td>

                        <td>
                            @i.NomeKit <br />
                            <small>Camisa: @i.TamanhoCamisa</small>
                        </td>

                        <td>
                            @if (i.ValorPago == 0)
                            {
                                <span class="badge bg-success">GRATUITO</span>
                            }
                            else
                            {
                                <strong>R$ @i.ValorPago</strong>
                    
                                <br />
                                @if (i.Status.Contains("Confirmado"))
                                {
                                    <span class="badge bg-success">CONFIRMADO</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">PENDENTE</span>
                                }
                            }
                        </td>

                        <td>
                            <div class="d-flex gap-2">

                                @if (i.ValorPago > 0 && !i.Status.Contains("Confirmado"))
                                {
                                    <form asp-action="ConfirmarPagamento" method="post">
                                        <input type="hidden" name="idInscricao" value="@i.Id" />
                                        <button class="btn btn-sm btn-success">Confirmar</button>
                                    </form>
                                }

                                <form asp-action="NegarInscricao" method="post">
                                    <input type="hidden" name="idInscricao" value="@i.Id" />
                                    <button class="btn btn-sm btn-danger"
                                            onclick="return confirm('Tem certeza que deseja excluir?');">
                                        Excluir
                                    </button>
                                </form>

                            </div>
                        </td>

                    </tr>
                }

            </tbody>
        </table>
    }
</div>
