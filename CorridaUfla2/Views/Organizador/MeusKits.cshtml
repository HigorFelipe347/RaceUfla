@model List<CorridaUfla2.Models.Kit>

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Meus Kits</h2>
        <a asp-action="CriarKit" class="btn btn-success">+ Novo Kit</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Nenhum kit criado ainda.</div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Nome</th>
                    <th>Preço</th>
                    <th>Itens</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var k in Model)
                {
                    <tr>
                        <td>@k.Nome</td>
                        <td>R$ @k.Preco</td>
                        <td>@k.ItensTexto</td>
                        <td>
                            <a asp-action="EditarKit" asp-route-id="@k.Id" class="btn btn-sm btn-primary">Editar</a>
                            <a asp-action="ExcluirKit" asp-route-id="@k.Id" class="btn btn-sm btn-danger"
                               onclick="return confirm('Apagar kit?');">
                                Apagar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>
