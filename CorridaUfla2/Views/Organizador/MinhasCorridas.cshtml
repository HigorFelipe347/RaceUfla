@model List<CorridaUfla2.Models.Corrida>

<div class="container mt-4">
    <div class="d-flex justify-content-between mb-3">
        <h2>Minhas Corridas</h2>
        <a asp-action="CriarCorrida" class="btn btn-success">+ Nova Corrida</a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-warning">Nenhuma corrida cadastrada.</div>
    }
    else
    {
        <table class="table table-hover shadow-sm">
            <thead class="bg-light">
                <tr>
                    <th>Nome</th>
                    <th>Data</th>
                    <th>Local</th>
                    <th>Inscritos</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model)
                {
                    int qtd = CorridaUfla2.Data.DadosApp.Inscricoes.Count(i => i.CorridaId == c.Id);

                    <tr>
                        <td>@c.Nome</td>
                        <td>@c.DataInicio.ToShortDateString() às @c.HorarioLargada</td>
                        <td>@c.Cidade</td>
                        <td><span class="badge bg-info">@qtd</span></td>

                        <td>
                            <a asp-action="InformacoesCorrida" asp-route-id="@c.Id" class="btn btn-sm btn-info text-white">
                                Participantes
                            </a>

                            <a asp-action="EditarCorrida" asp-route-id="@c.Id" class="btn btn-sm btn-primary">Editar</a>

                            <a asp-action="ExcluirCorrida" asp-route-id="@c.Id"
                               onclick="return confirm('Deseja excluir?');"
                               class="btn btn-sm btn-danger">
                                Excluir
                            </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    }
</div>
