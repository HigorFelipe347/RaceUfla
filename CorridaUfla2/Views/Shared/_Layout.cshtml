@using Microsoft.AspNetCore.Http
@inject IHttpContextAccessor HttpContextAccessor
@{
    var tipo = HttpContextAccessor.HttpContext.Session.GetString("Tipo");
    var nome = HttpContextAccessor.HttpContext.Session.GetString("Nome");
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CorridaUfla2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">CorridaUfla2</a>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item"><a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a></li>
                        @if (tipo == "Organizador")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="Organizador" asp-action="MeusKits">Meus Kits</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-primary fw-bold" asp-controller="Organizador" asp-action="MinhasCorridas">Minhas Corridas</a>
                            </li>
                        }
                        @if (tipo == "Corredor")
                        {
                            <li class="nav-item"><a class="nav-link fw-bold" asp-controller="Home" asp-action="MinhasInscricoes">Minhas Inscrições</a></li>
                        }
                    </ul>
                    <ul class="navbar-nav">
                        @if (string.IsNullOrEmpty(nome))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Conta" asp-action="Login">Login</a></li>
                        }
                        else
                        {
                            <li class="nav-item"><span class="nav-link">Olá, @nome</span></li>
                            <li class="nav-item"><a class="nav-link text-danger" asp-controller="Conta" asp-action="Logout">Sair</a></li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">@RenderBody()</main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>